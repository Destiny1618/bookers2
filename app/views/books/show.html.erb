<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book_new, user: @book.user %>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to user_path(@book.user) do %>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete ,"data-confirm" => "本当に消しますか？" %></td>
            <% end %>
            <td class=<%= "favorite-" + @book.id.to_s %>><%= render 'favorites/favorite', book: @book, user: current_user %></td>
            <td class="count"><%= render 'book_comments/comment_count', book: @book %></td>
          </tr>
        </tbody>
      </table>
      <td class="book_comment"><%= render 'book_comments/comment', book: @book, book_comment: @book_comment %></td>
    </div>
  </div>
</div>
